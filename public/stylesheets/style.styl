body
  margin-top: 50px
  font: 18px "Arvo", Cambria, serif
  width: 26em
  margin-left:auto;
  margin-right:auto;
a
  color: #00B7FF

#averbo-title
	text-align:center;
	padding:0;
	margin:0;

input {
    height:30px;
    font-size:18px;
    font-family: Arvo, Cambria, serif;
    width:100%;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
    -moz-background-clip: padding;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border:1px solid #cccccc;
    padding:0 10px;
}

input:focus,
select:focus,
textarea:focus,
button:focus {
    outline: none;
}

#lemma
	font-weight:bold;
#extra
	font-variant:small-caps;
	color:grey;
